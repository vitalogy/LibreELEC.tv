. /etc/profile

oe_setup_addon service.fbsplash

chmod a+x $ADDON_DIR/bin/*

if [ ! -c "$FB_DEVICE" ] && [ ! -w "$FB_DEVICE" ]; then
	exit 0
fi

export FRAMEBUFFER="$FB_DEVICE"
exec $ADDON_DIR/bin/ply-image $ADDON_DIR/resources/media/splash.png
